<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/inside_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/map_empty" />

    <TextView
        android:id="@+id/lbl_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryText"
        android:text="Credits: " />

    <TextView
        android:id="@+id/txt_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@+id/lbl_credit"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryText"
        android:text="50000" />

    <ImageView
        android:id="@+id/outside_imageview1"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignTop="@id/inside_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp" />

    <ImageView
        android:id="@+id/outside_imageview2"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignTop="@id/outside_imageview1"
        android:layout_toRightOf="@id/outside_imageview1" />

    <ImageView
        android:id="@+id/outside_imageview3"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignTop="@id/outside_imageview1"
        android:layout_toRightOf="@id/outside_imageview2" />

    <ImageView
        android:id="@+id/outside_imageview4"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@+id/outside_imageview1"
        android:layout_alignLeft="@+id/outside_imageview1" />

    <ImageView
        android:id="@+id/outside_imageview5"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@id/outside_imageview2"
        android:layout_toRightOf="@id/outside_imageview4"/>

    <ImageView
        android:id="@+id/outside_imageview6"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@id/outside_imageview3"
        android:layout_toRightOf="@id/outside_imageview5"/>


    <ImageView
        android:id="@+id/outside_imageview7"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@+id/outside_imageview4"
        android:layout_alignLeft="@+id/outside_imageview4" />

    <ImageView
        android:id="@+id/outside_imageview8"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@id/outside_imageview5"
        android:layout_toRightOf="@id/outside_imageview7" />

    <ImageView
        android:id="@+id/outside_imageview9"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@id/outside_imageview6"
        android:layout_toRightOf="@id/outside_imageview8" />


    <Button
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:text="Buy" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="8dp"
        android:text="Force Refresh" />


</RelativeLayout>
